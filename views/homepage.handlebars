<!-- Loop over each object in the projects array -->
{{#each blogs as |blog| }}
<div class="row">
    

    <div class="card">
      <div class="card-body">
   <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      <a href="/blogs/{{blog.id}}">{{blog.title}}</a>
    </h2>        <a href="/blogs/{{id}}" class="btn btn-primary">View Blog Post</a>
      </div>
      <div class="card-footer text-muted">
        Posted by {{blog.user.name}} at {{format_date blog.createdAt}}
      </div>


{{/each}}
